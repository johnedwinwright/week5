<p id="notice"><%= notice %></p>

<h1>Listing Features</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @features.each do |feature| %>
      <tr>
        <td><%= feature.name %></td>
        <td><%= feature.description %></td>
        <td class="text-right">
        <%= link_to 'Show', feature, class: "btn : btn-default" %>
        <%= link_to 'Edit', edit_feature_path(feature), class: "btn : btn-default" %>
        <%= link_to 'Destroy', feature, method: :delete, class: "btn : btn-danger", data: { confirm: 'Are you sure?' } %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feature', new_feature_path, class: "btn : btn-primary" %>
