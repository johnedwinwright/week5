<p id="notice"><%= notice %></p>

<h1>Listing Models</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Make</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @models.each do |model| %>
      <tr>
        <td><%= model.name %></td>
        <td><%= model.make.name if model.make %></td>
        <td class="text-right">
        <%= link_to 'Show', model, class: "btn : btn-default" %>
        <%= link_to 'Edit', edit_model_path(model), class: "btn : btn-default" %>
        <%= link_to 'Destroy', model, method: :delete, class: "btn : btn-danger", data: { confirm: 'Are you sure?' } %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Model', new_model_path, class: "btn : btn-primary" %>
