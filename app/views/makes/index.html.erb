<p id="notice"><%= notice %></p>

<h1>Listing Makes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Logo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @makes.each do |make| %>
      <tr>
        <td><%= make.name %></td>
        <td><%= make.logo %></td>
        <td class="text-right">
        <%= link_to 'Show', make, class: "btn : btn-default" %>
        <%= link_to 'Edit', edit_make_path(make), class: "btn : btn-default" %>
        <%= link_to 'Destroy', make, method: :delete, class: "btn : btn-danger", data: { confirm: 'Are you sure?' } %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Make', new_make_path, class: "btn : btn-primary" %>
