<%= simple_form_for(@vehicle) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :price%>
    <%= f.association :model, as: :radio_buttons %>
    <%= f.association :features, as: :check_boxes %>
    <%= f.input :color %>
    <%= f.input :condition %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
